{
  "name": "@evo/featureflags-client",
  "version": "2.0.0",
  "description": "Node client for FeatureFlags service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "ts:check": "tsc -p ./tsconfig.json --noEmit --skipLibCheck",
    "precommit": "lint-staged",
    "lint": "eslint --fix ./src",
    "lint:check": "eslint ./src",
    "pretty": "prettier --write \"./src/**/*.ts\"",
    "pretty:check": "prettier -l \"./src/**/*.ts\"",
    "test": "jest --config jest.config.ts --coverage --bail --verbose --runInBand --detectOpenHandles --forceExit",
    "test:watch": "npm run test -- --watchAll"
  },
  "simple-pre-commit": "npx lint-staged",
  "lint-staged": {
    "*.ts": [
      "npm run lint:check",
      "npm run pretty:check"
    ]
  },
  "author": "d.zakharchuk",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@jest/globals": "29.7.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.30",
    "eslint": "^8.57.0",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "simple-pre-commit": "1.2.1",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.4.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "1.10.4",
    "@grpc/proto-loader": "0.7.11",
    "underscore": "1.13.6"
  }
}
