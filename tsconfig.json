{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "es7",
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "strict": false,  // TODO: Enable
    "noImplicitAny": false,  // TODO: Enable
    "strictNullChecks": false,   // TODO: Enable
    "noImplicitReturns": false,  // TODO: Enable
    "strictFunctionTypes": false,  // TODO: Enable
    "strictBindCallApply": true,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "types": [
      "@types/jest",
      "@types/node"
    ],
//    "allowJs": true
  },
  "exclude": [
    "__tests__/**",
    "node_modules",
    "build",
  ],
  "include": [
    "src/**/*"
  ]
}
