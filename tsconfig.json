{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDirs": [
      "src",
      "tests"
    ],
    "outDir": "dist",
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "./node_modules/@types/*",
        "/usr/lib/node_modules/*",
        "/usr/lib/node_modules/@types/*",
        "*"
      ]
    }
  },
  "exclude": [
    "./src/__tests__/**",
    "node_modules",
    "dist"
  ],
  "include": [
      "src/**/*.ts"
  ]
}
